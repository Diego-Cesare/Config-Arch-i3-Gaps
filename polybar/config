[module/upgrades]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/usr/bin/env sh -c [command]")
exec = ~/.config/polybar/scripts/upgrades.sh
;format-prefix = ÔÉ±

;exec = echo "ÓôÉ"
